@model TigerTix.Web.Models.Event

@{
    ViewData["Title"] = "Create Event";
}

<h2>Create Event</h2>

<form asp-action="Create Event" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="Enter the name of the event" type="text" />
    </div>
    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" placeholder="Enter venue location" type="text" />
    </div>
    <div class="form-group">
        <label asp-for="Capacity"></label>
        <input asp-for="Capacity" class="form-control" placeholder="Total capacity of venue" />
    </div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control" placeholder="Choose a date" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" placeholder="Enter description" type="text" />
    </div>
    <div class="form-group">
        <label asp-for="UploadImage"></label>
        <input asp-for="UploadImage" class="form-control" placeholder="Add image" type="file" />
    </div>
    <button type="submit" class="btn btn-primary mt-3">EventPublish</button>
</form>

