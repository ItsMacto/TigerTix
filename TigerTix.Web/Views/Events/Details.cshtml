<!-- Views/Events/Details.cshtml -->
@model TigerTix.Web.Models.Event

@{
    ViewData["Title"] = "Event Details";
}

<div class="card">
    <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Name">
    <div class="card-body">
        <h2 class="card-title">@Model.Name</h2>
        <p class="card-text">@Model.Description</p>
        <p><strong>Date:</strong> @Model.Date.ToString("dd MMM yyyy")</p>
        <p><strong>Location:</strong> @Model.Location</p>
        <p><strong>Price:</strong> $@Model.Price</p>
        <a href="#" class="btn btn-success">Buy Ticket</a>
    </div>
</div>