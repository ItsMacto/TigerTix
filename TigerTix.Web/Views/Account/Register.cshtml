<!-- Views/Account/Register.cshtml -->
@model TigerTix.Web.Models.User

@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<form asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" placeholder="Enter your full name" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" placeholder="Enter email" type="email" />
    </div>
    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control" placeholder="Choose a username" />
    </div>

    <!-- New CUID Field -->
    <div class="form-group">
        <label asp-for="CUID">CUID (optional):</label>
        <input asp-for="CUID" class="form-control" placeholder="C12345678" />
        <span asp-validation-for="CUID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" placeholder="Enter password" type="password" />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Register</button>
</form>

<script>
    document.querySelector('input[name="CUID"]').addEventListener('input', function () {
        const cuidPattern = /^C\d{8}$/;
        const cuidField = this;
        if (cuidField.value && !cuidPattern.test(cuidField.value)) {
            cuidField.setCustomValidity("CUID should start with 'C' followed by 8 digits.");
        } else {
            cuidField.setCustomValidity("");
        }
    });
</script>